{
  "data": [
    {
      "name": "people",
      "url": "./data/[dataFolder]/People.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Institutions",
      "url": "./data/[dataFolder]/Institutions.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Publications",
      "url": "./data/[dataFolder]/Publications.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PI",
      "url": "./data/[dataFolder]/Person-Institution.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PP",
      "url": "./data/[dataFolder]/Person-Publication.csv",
      "format": {
        "type": "csv"
      }
    }
  ],
  "parameters": [
    {
      "name": "nodeSelection",
      "action": "replace",
      "network": "PI-net",
      "type": "selection"
    },
    {
      "name": "outlinks",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "type": "connectedEdges"
        }
      ]
    },
    {
      "name": "outnodes",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "type": "connectedNodes",
          "direction": "both"
        }
      ]
    },
    {
      "name": "selectedYears",
      "value": [1000, 2000]
    }
  ],
  "networks": [
    {
      "name": "PI-net",
      "parts": [
        {
          "id_field": "Name",
          "data": "people",
          "yieldsNodes": [
            {
              "type": "person",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Institutions",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "institution",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Publications",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "publication",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "PI",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Institution"
              },
              "target_node_type": "institution",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "PP",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Publication"
              },
              "target_node_type": "publication",
              "data": [
                "*"
              ]
            }
          ]
        }
      ],
      "transform": [
        {
          "type": "filterNodes",
          "expression": "datum.id !== '' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== ' ' "
        },
        {
          "type": "removeIsolated"
        },
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "orderings": [
    {
      "name": "alphabetical",
      "orderBy": {
        "field": "id"
      },
      "data": "PI-net.nodes"
    },
    {
      "name": "degree",
      "orderBy": {
        "field": "degree",
        "direction": "descending"
      },
      "data": "PI-net.nodes"
    }
  ],
  "layouts": [
    {
      "name": "PI-layout",
      "network": "PI-net",
      "type": "d3-force",
      "forces": [
        {
          "force": "link",
          "iterations": 2,
          "distance": 30
        },
        {
          "force": "nbody",
          "strength": -9
        },
        {
          "force": "center",
          "x": 50,
          "y": 50,
          "strength": 2
        },
        {
          "force": "collide",
          "radius": 15
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#1f77b4",
        "#2ca02c",
        "#8c564b"
      ],
      "domain": [
        "person",
        "institution",
        "publication"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond"
      ],
      "domain": [
        "person",
        "institution",
        "publication"
      ]
    },
    {
      "name": "radius",
      "type": "linear",
      "range": [
        50,
        500
      ],
      "domain": {
        "data": "PI-net.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color-link",
      "type": "ordinal",
      "scheme": "category20",
      "domain": [
        "Lecturer in History Department",
        "Head of History Department",
        "High commissioner",
        "Founder",
        "Student",
        "Speaker",
        "Director",
        "President",
        "Lecturer",
        "Published by EAPH",
        "Academic",
        "Officer",
        "Deputy Director"
      ]
    },
    {
      "name": "axis",
      "type": "ordinal",
      "domain": [
        "publication",
        "person",
        "institution"
      ],
      "range": [
        0,
        1,
        2
      ]
    }
  ],
  "vis": [
    {
      "entries": "PI-net.links",
      "layout": "PI-layout",
      "if": "datum.source.y < 320",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": {
          "conditions": [
            {
              "inSelection": "outlinks.links",
              "value": "[selColor]"
            },
            {
              "test": "datum.data.Year > params.selectedYears[0] && datum.data.Year < params.selectedYears[1]",
              "value": "black"
            }
          ],
          "value": "lightgray"
        }
      }
    },
    {
      "entries": "PI-net.nodes",
      "layout": "PI-layout",
      "if": "datum.y < 320",
      "mark": {
        "type": "text",
        "text": {
          "field": "id"
        },
        "align": "",
        "fill": {
          "condition": {
            "test": "datum.degree > 4",
            "value": "black"
          },
          "value": "none"
        },
        "dx": 4,
        "dy": -4
      }
    },
    {
      "entries": "PI-net.nodes",
      "ifInSelection": "nodeSelection.nodes",
      "layout": "PI-layout",
      "mark": {
        "type": "circle",
        "area": 700,
        "fill": "gold"
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "toggle",
          "selection": "nodeSelection"
        }
      ]
    },
    {
      "entries": "PI-net.nodes",
      "layout": "PI-layout",
      "if": "datum.y < 320",
      "mark": {
        "//type": "circle",
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        },
        "stroke": {
          "conditions": [
            {
              "inSelection": "nodeSelection.nodes",
              "value": "[selColor]"
            },
            {
              "inSelection": "outnodes.nodes",
              "//value": "[selColor]",
              "value": "blue"
            }
          ],
          "value": "black"
        }
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "replace",
          "selection": "nodeSelection"
        }
      ]
    }
  ]
}