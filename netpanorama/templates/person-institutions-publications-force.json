{
  "zoom": true,
  "width": "[width]",
  "height": "[height]",
  "styled": {
    "noDisplay": {
      "display": "none"
    }
  },
  "data": [
    {
      "name": "people",
      "url": "./data/[dataFolder]/People.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Institutions",
      "url": "./data/[dataFolder]/Institutions.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Publications",
      "url": "./data/[dataFolder]/Publications.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Events",
      "url": "./data/[dataFolder]/Events.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PI",
      "url": "./data/[dataFolder]/Person-Institution.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PP",
      "url": "./data/[dataFolder]/Person-Publication.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PE",
      "url": "./data/[dataFolder]/Person-Event.csv",
      "format": {
        "type": "csv"
      }
    }
  ],
  "parameters": [
    {
      "name": "nodeSelection",
      "action": "replace",
      "network": "PI-net",
      "type": "selection"
    },
    {
      "name": "outlinks",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "type": "connectedEdges"
        }
      ]
    },
    {
      "name": "outnodes",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "//type": "connectedNodes",
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "selectedYears",
      "value": [
        1000,
        2020
      ]
    }
  ],
  "networks": [
    {
      "name": "PI-net",
      "parts": [
        {
          "data": "people",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "person",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Institutions",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "institution",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Publications",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "publication",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data2": "Events",
          "yieldsNodes2": [
            {
              "id_field": "Name",
              "type": "event",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "PI",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Institution"
              },
              "target_node_type": "institution",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "PP",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Publication"
              },
              "target_node_type": "publication",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data2": "PE",
          "yieldsLinks2": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Event"
              },
              "target_node_type": "event",
              "data": [
                "*"
              ]
            }
          ]
        }
      ],
      "transform": [
        {
          "type": "filterNodes",
          "expression": "datum.id !== '' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== ' ' "
        },
        {
          "type": "metric",
          "metric": "degree"
        },
        {"type2": "filterEdges", "expression": "datum.target._type != 'event' || datum.source.degree > 1"},
        {
          "type": "removeIsolated"
        },
        {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],
  "orderings": [
    {
      "name": "alphabetical",
      "orderBy": {
        "field": "id"
      },
      "data": "PI-net.nodes"
    },
    {
      "name": "degree",
      "orderBy": {
        "field": "degree",
        "direction": "descending"
      },
      "data": "PI-net.nodes"
    }
  ],
  "layouts": [
    {
      "name": "PI-layout",
      "network": "PI-net",
      "type": "d3-force",
      "forces": [
        {
          "force": "link",
          "iterations": 8,
          "distance": 50
        },
        {
          "force": "nbody",
          "strength": -2,
          "distanceMax": 100
        },
        {
          "force": "collide",
          "radius": 15
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "[personColor]",
        "[institutionColor]",
        "[publicationColor]",
        "[eventColor]"
      ],
      "range2": [
        "[personColor]",
        "[institutionColor]",
        "[publicationColor]",
        "[institutionColor]"
      ],
      "domain": [
        "person",
        "institution",
        "publication",
        "event"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle"
      ],
      "range2": [
        "circle",
        "square",
        "diamond",
        "square"
      ],
      "domain": [
        "person",
        "institution",
        "publication",
        "event"
      ]
    },
    {
      "name": "radius",
      "type": "linear",
      "range": [
        40,
        500
      ],
      "domain": {
        "data": "PI-net.nodes",
        "field": "degree"
      }
    },
    {
      "name": "color-link",
      "type": "ordinal",
      "scheme": "category20",
      "domain": [
        "Lecturer in History Department",
        "Head of History Department",
        "High commissioner",
        "Founder",
        "Student",
        "Speaker",
        "Director",
        "President",
        "Lecturer",
        "Published by EAPH",
        "Academic",
        "Officer",
        "Deputy Director"
      ]
    }
  ],
  "vis": [
    {
      "entries": "PI-net.links",
      "layout": "PI-layout",
      "parallelLinksType": "curve",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": {
          "conditions": [
            {
              "inSelection": "outlinks.links",
              "value": "[selColor]"
            },
            {
              "test": "datum.data.Year > params.selectedYears[0] && datum.data.Year < params.selectedYears[1]",
              "value": "#F7F7F7"
            }
          ],
          "value": "#9C9C9C"
        },
        "strokeDash": {
          "expression": "datum.data.Year ? 0 : 2"
        }
      }
    },
    {
      "entries": "PI-net.nodes",
      "layout": "PI-layout",
      "occlusion": {
        "field": "degree"
      },
      "mark": {
        "type": "text",
        "text": {
          "field": "id"
        },
        "align": "",
        "fontWeight": "normal",
        "fill": "white",
        "dx": 5,
        "dy": -6
      }
    },
    {
      "entries": "PI-net.nodes",
      "ifInSelection": "nodeSelection.nodes",
      "layout": "PI-layout",
      "mark": {
        "type": "circle",
        "area": 700,
        "fill": "[selColor]"
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "toggle",
          "selection": "nodeSelection"
        }
      ]
    },
    {
      "entries": "PI-net.nodes",
      "layout": "PI-layout",
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "stroke": {
          "conditions": [
            {
              "inSelection": "nodeSelection.nodes",
              "value": "[selColor]"
            },
            {
              "inSelection": "outnodes.nodes",
              "value": "[selColor]"
            }
          ],
          "value": "black"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        }
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "replace",
          "selection": "nodeSelection"
        }
      ]
    }
  ]
}