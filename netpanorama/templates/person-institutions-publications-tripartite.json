{
  "x2": 200,
  "width": "[width]",
  "heightz": 400,
  "data": [
    {
      "name": "people",
      "url": "./data/[dataFolder]/People.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Institutions",
      "url": "./data/[dataFolder]/Institutions.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Publications",
      "url": "./data/[dataFolder]/Publications.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "Events",
      "url": "./data/[dataFolder]/Events.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PI",
      "url": "./data/[dataFolder]/Person-Institution.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PP",
      "url": "./data/[dataFolder]/Person-Publication.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "PE",
      "url": "./data/[dataFolder]/Person-Event.csv",
      "format": {
        "type": "csv"
      }
    }
  ],

  "parameters": [
    {
      "name": "nodeSelection",
      "action": "replace",
      "network": "PI-net",
      "type": "selection"
    },
    {
      "name": "outlinks",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "type": "connectedEdges"
        }
      ]
    },
    {
      "name": "outnodes",
      "source": "nodeSelection",
      "network": "PI-net",
      "transform": [
        {
          "//type": "connectedNodes",
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "selectedYears",
      "value": [1000, 2020]
    }
  ],

  "networks": [
    {
      "name": "PI-net",
      "parts": [
        {
          "data": "people",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "person",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Institutions",
          "yieldsNodes": [
            {
            "id_field": "Name",
              "type": "institution",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Publications",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "publication",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "Events",
          "yieldsNodes": [
            {
              "id_field": "Name",
              "type": "event",
              "data": [
                "*"
              ]
            }
          ]
        },
        {
          "data": "PI",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Institution"
              },
              "target_node_type": "institution",
              "data": ["*"]
            }
          ]
        },
        {
          "data": "PP",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Publication"
              },
              "target_node_type": "publication",
              "data": ["*"]
            }
          ]
        },
        {
          "data": "PE",
          "yieldsLinks": [
            {
              "source_id": {
                "field": "Person"
              },
              "source_node_type": "person",
              "target_id": {
                "field": "Event"
              },
              "target_node_type": "event",
              "data": ["*"]
            }
          ]
        }
        ],
        "transform": [
        {
          "type": "filterNodes",
          "expression": "datum.id !== '' "
        },
        {
          "type": "filterNodes",
          "expression": "datum.id !== ' ' "
        },
        {
          "type": "metric",
          "metric": "degree"
        },
        {"type": "filterEdges", "expression": "datum.target._type != 'event' || datum.source.degree > 1"},
        {
          "type": "removeIsolated"
        },
          {
          "type": "metric",
          "metric": "degree"
        }
      ]
    }
  ],

  "orderings": [
    {
      "name": "alphabetical",
      "orderBy": {
        "field": "id"
      },
      "data": "PI-net.nodes"
    },
    {
      "name": "degree",
      "orderBy": {
        "fieldsss": ["_type", "degree"],
        "expression2": "datum.degree",
        "expression": "datum.degree + ((datum._type) ? ((datum._type == 'event') ? 100 : 0) : 0)",
        "direction": "descending"
      },
      "data": "PI-net.nodes"
    },
    {
      "name": "optimal",
      "method": "barycentre",
      "network": "PI-net"
    }
  ],
  "layouts": [
    {
      "name": "PI-jigsaw",
      "pattern": "cartesian",
      "x": [
        {
          "scale": "axis",
          "field": "_type"
        }
      ],
      "y": [
        {
          "order": "optimal",
          "order2": "degree"
        }
      ],
      "data": "PI-net.nodes",
      "positioning2": "start",
      "positioning": "distribute"
    }
  ],
  "scales": [
    {
        "name": "color",
        "type": "ordinal",
        "range": [
        "[personColor]",
        "[institutionColor]",
        "[publicationColor]",
        "[eventColor]"
      ],
      "domain": [
        "person",
        "institution",
        "publication",
        "event"
      ]
    },
    {
      "name": "shapeScale",
      "type": "ordinal",
      "range": [
        "circle",
        "square",
        "diamond",
        "triangle"
      ],
      "domain": [
        "person",
        "institution",
        "publication",
        "event"
      ]
    },
    {
      "name": "radius",
      "type": "linear",
      "range": [50, 100],
      "domain": { "data": "PI-net.nodes", "field": "degree" }
    },
    {
      "name": "color-link",
      "type": "ordinal",
      "scheme": "category20",
      "domain": [
        "Lecturer in History Department",
        "Head of History Department",
        "High commissioner",
        "Founder",
        "Student",
        "Speaker",
        "Director",
        "President",
        "Lecturer",
        "Published by EAPH",
        "Academic",
        "Officer",
        "Deputy Director"
      ]
    },
    {
      "name": "axis",
      "type": "ordinal",
      "domain": [
        "publication",
        "person",
        "institution",
        "event"
      ],
      "range": [
        1,
        2,
        3,
        3
      ]
    }
  ],
  "vis": [
    {
      "entries": "PI-net.links",
      "layout": "PI-jigsaw",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": {
          "conditions": [
            {
              "inSelection": "outlinks.links",
              "value": "[selColor]"
            },
            {
              "test": "datum.data.Year > params.selectedYears[0] && datum.data.Year < params.selectedYears[1]",
              "value": "rgb(20, 20, 20, 0.3)"
            }
          ],
          "value": "lightgray"
        }
      }
    },

    {
      "entries": "PI-net.nodes",
      "ifInSelection": "nodeSelection.nodes",
      "layout": "PI-jigsaw",
      "mark": {
        "type": "circle",
        "area": 700,
        "fill": "[selColor]"
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "toggle",
          "selection": "nodeSelection"
        }
      ]
    },

    {
      "entries": "PI-net.nodes",
      "layout": "PI-jigsaw",
      "mark": {
        "type": "symbol",
        "shape": {
          "field": "_type",
          "scale": "shapeScale"
        },
        "size": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "_type",
          "scale": "color"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        },
        "stroke": {
          "conditions": [
            {
              "inSelection": "nodeSelection.nodes",
              "value": "[selColor]"
            },
            {
              "inSelection": "outnodes.nodes",
              "value": "[selColor]"
            }
          ],
          "value": "black"
        }
      },
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "replace",
          "selection": "nodeSelection"
        }
      ]
      },
    {
      "entries": "PI-net.nodes",
      "layout": "PI-jigsaw",
      "mark": {
        "type": "text",
        "text": {
          "field": "id"
        },
        "align": "",
        "fill": {
          "conditions": [{
            "test": "datum.degree > 2",
            "value": "black"
          },
          {
            "inSelection": "outnodes.nodes",
            "value": "black"
          }],
          "value": "none"
        },
        "fontSize": "10",
        "dx": {
          "condition": {
            "test": "datum._type == 'publication'",
            "value": 15,
            "value2": -100
          },
          "value": 15
        },
        "dy": 4
      }
    }
  ]
}